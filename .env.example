# Environment Variables Template
# Copy this file to .env.local and fill in your values

# =======================
# SITE CONFIGURATION
# =======================
NEXT_PUBLIC_SITE_URL=https://capdev.tech

# =======================
# ANALYTICS (Optional)
# =======================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =======================
# API KEYS (Optional)
# =======================
# GitHub Personal Access Token (for API rate limits)
# GITHUB_TOKEN=your_github_personal_access_token

# Weather API (for time-based greetings)
# WEATHER_API_KEY=your_weather_api_key

# =======================
# CONTACT FORM (REQUIRED for contact functionality)
# =======================
# Resend Email Service
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_TO_EMAIL=your_email@example.com

# On-Demand Revalidation Secret
# Generate a random secret: openssl rand -hex 32
REVALIDATE_SECRET=your_random_secret_token_here

# Vercel KV (Rate Limiting) - Auto-provided by Vercel when you create KV database
# KV_REST_API_URL=your_vercel_kv_url
# KV_REST_API_TOKEN=your_vercel_kv_token

# =======================
# FEATURE FLAGS
# =======================
NEXT_PUBLIC_ENABLE_PARTICLES=true
NEXT_PUBLIC_ENABLE_TERMINAL=true
NEXT_PUBLIC_ENABLE_EASTER_EGGS=true
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=false

# =======================
# DEVELOPMENT
# =======================
# Set to 'production' for production builds
NODE_ENV=development
